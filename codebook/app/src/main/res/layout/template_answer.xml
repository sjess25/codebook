<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:layout_marginHorizontal="10dp">

    <TextView
            android:text="NickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/nickname_answer" android:textStyle="bold|italic"
            android:background="@color/lightSecondary" android:textColor="@color/lightPrimary"
            android:paddingHorizontal="5dp"/>
    <TextView
            android:text="Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/answer_answer"
            android:background="@color/lightPrimaryDark" android:paddingHorizontal="10dp"
            android:textIsSelectable="true"/>
</LinearLayout>