<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".Searcher" android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/toolbar" android:background="@color/colorUAMC">

        <Button
                android:text="@string/back_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" style="@style/Widget.AppCompat.Button.Borderless"/>
        <SearchView
                android:layout_width="302dp"
                android:layout_height="44dp" app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="4dp"/>
    </android.support.constraint.ConstraintLayout>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>