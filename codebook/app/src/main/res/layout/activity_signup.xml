<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signup"
        android:orientation="vertical"
>
    <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/app_name" android:textAlignment="center"
            android:textSize="36sp" android:textColor="@color/trueWhite" android:background="@color/colorUAMC"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/welcome_message" android:textSize="48sp"
            android:textAlignment="center" android:textStyle="bold|italic" android:textColor="@color/trueBlack"
            android:layout_margin="15dp"/>
    <TextView
            android:text="@string/signup_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/instructions_signup" android:textAlignment="center"
            android:textSize="20sp" android:layout_marginBottom="15dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/socialMedia_signup_box">
        <Button
                android:text="FaceBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/facebook_signup_button"
                android:layout_weight="1" android:background="@color/colorFacebook" android:layout_margin="15dp"
                android:textColor="@color/trueWhite" style="@style/Base.Widget.AppCompat.Button.Borderless"/>
        <Button
                android:text="gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gmail_signup_button" android:layout_weight="1"
                android:background="@color/colorGMail" android:layout_margin="15dp"
                android:textColor="@color/trueWhite" style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>
    <TextView
            android:text="or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/or_text" android:textSize="24sp"
            android:textAlignment="center" android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/user_name_signup" android:hint="User Name" android:layout_margin="15dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_signup" android:hint="E-mail" android:layout_margin="15dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_signup" android:hint="Password" android:layout_margin="15dp"/>
    <Button
            android:text="Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/email_signup_button" android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
</LinearLayout>
